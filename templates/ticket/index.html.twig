{% extends 'base.html.twig' %}

{% block title %}Ticket index{% endblock %}

{% block body %}
<h1>Gestion des tickets</h1>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>DateCreation</th>
            <th>Description</th>
            <th>actions</th>
        </tr>
    </thead>
    <tbody>
        {% for ticket in tickets %}
        <tr>
            <td>{{ ticket.id }}</td>
            <td>{{ ticket.dateCreation ? ticket.dateCreation|date('Y-m-d H:i:s') : '' }}</td>
            <td>{{ ticket.description }}</td>
            <td>
                <a href="{{ path('app_ticket_show', {'id': ticket.id}) }}">show</a>
                <a href="{{ path('app_ticket_edit', {'id': ticket.id}) }}">edit</a>
            </td>
        </tr>
        {% else %}
        <tr>
            <td colspan="4">no records found</td>
        </tr>
        {% endfor %}
    </tbody>
</table>

<a href="{{ path('app_ticket_new') }}">Create new</a>
{% endblock %}
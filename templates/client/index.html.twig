{% extends 'base.html.twig' %}

{% block title %}Client index{% endblock %}

{% block body %}
<h1>Gestion des clients</h1>
<a class="btn btn-success" href="{{path('app_client_new')}}" role="button">+</a>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>RaisonSociale</th>
            <th>actions</th>
        </tr>
    </thead>
    <tbody>
        {% for client in clients %}
        <tr>
            <td>{{ client.id }}</td>
            <td>{{ client.raisonSociale }}</td>
            <td>
                <a href="{{ path('app_client_show', {'id': client.id}) }}">show</a>
                <a href="{{ path('app_client_edit', {'id': client.id}) }}">edit</a>
            </td>
        </tr>
        {% else %}
        <tr>
            <td colspan="3">no records found</td>
        </tr>
        {% endfor %}
    </tbody>
</table>

<a href="{{ path('app_client_new') }}">Create new</a>
{% endblock %}